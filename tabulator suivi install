  <style>
    body {
      font-family: Arial, sans-serif;
      padding: 20px;
    }

    /* üé® Couleurs par statut */
    .statut-analyse {
      background-color: #fff3cd !important;
    }

    .statut-install {
      background-color: #cce5ff !important;
    }

    .statut-termine {
      background-color: #d4edda !important;
    }
  </style>
